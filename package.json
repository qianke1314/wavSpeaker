{
  "name": "wav-call-system",
  "version": "1.0.1",
  "description": "跨平台叫号系统语音播放库，支持普通叫号和大堂经理叫号",
  "main": "src/index.js",
  "module": "src/index.js",
  "bin": {
    "wav-call": "src/index.js"
  },
  "keywords": ["wav", "voice", "call-system", "audio", "playback", "queue"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/wav-call-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/wav-call-system/issues"
  },
  "homepage": "https://github.com/yourusername/wav-call-system#readme",
  "dependencies": {
    "fs-extra": "^11.3.3",
    "wav": "^1.0.2"
  },
  "devDependencies": {
    "node-gyp": "^12.0.0"
  },
  "optionalDependencies": {
    "speaker": "^0.5.5"
  },
  "scripts": {
    "test": "node src/index.js",
    "start": "node src/index.js",
    "build": "node-gyp configure build",
    "postinstall": "node -e \"try { require('speaker'); console.log('✅ speaker 模块已成功加载'); } catch (e) { console.log('⚠️ speaker 模块未安装，将使用模拟播放模式'); }\""
  },
  "binary": {
    "module_name": "speaker",
    "module_path": "node_modules/speaker/build/Release",
    "remote_path": "{version}",
    "package_name": "speaker-{version}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/TooTallNate/node-speaker/releases/download/"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
